<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="100dp"
    android:id="@+id/interview_end_layout">

    <TextView
        android:text="Please proceed to score the applicant"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_height="wrap_content"
        android:id="@+id/test_ended_text"
        android:textAlignment="center"
        android:layout_margin="100dp"/>

    <Button
        android:text="Review candidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_candidate"
        android:onClick="goToReviewPage"/>
</LinearLayout>