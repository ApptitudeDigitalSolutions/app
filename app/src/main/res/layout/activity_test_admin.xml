<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Title :"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_title" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="20 / 10 / 16"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/to_be_conducted_date"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Test ID : Dwr325"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/test_ID"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Participants : 8"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/participants_count"
                android:layout_weight="1" />

            <TextView
                android:text="Total time : 00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_time_elapsed"
                android:gravity="right"/>

            <TextView
                android:text="Section Time : 00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/section_time_elapsed"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="507dp">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <Button
                android:text="Start Test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_test"
                android:layout_weight="1" />

            <Button
                android:text="Next Section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_section"
                android:layout_weight="1" />

            <Button
                android:text="Start Section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_section"
                android:layout_weight="1" />

            <Button
                android:text="Stop Test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stop_test"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>